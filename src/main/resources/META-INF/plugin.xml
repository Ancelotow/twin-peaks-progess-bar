<idea-plugin>
    <id>org.ancelotow.twin-peaks-progress-bar</id>
    <name>Twin Peaks - Progress Bar</name>
    <vendor email="ancelotow@icloud.com">>Ancelotow</vendor>

    <description><![CDATA[
        Twin Peaks inspired progress bar for JetBrains IDEs.<br>
        <em>Unofficial plugin made by a fan of David Lynch</em>
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <idea-version since-build="231.0"/>

    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="org.ancelotow.twinpeaksprogressbar.TwinPeaksAppComponent"/>
    </extensions>

    <applicationListeners>
        <listener class="org.ancelotow.twinpeaksprogressbar.TwinPeaksAppComponent"
                  topic="com.intellij.ide.ui.LafManagerListener"/>
    </applicationListeners>
</idea-plugin>